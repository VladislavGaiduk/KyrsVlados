<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #E6E6FA;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui.controllers.RegisterController">
   <children>
      <VBox alignment="CENTER" layoutX="150.0" layoutY="25.0" prefWidth="300.0" spacing="15.0">
         <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6A5ACD;" text="Регистрация" />
            <TextField fx:id="firstNameField" prefWidth="200.0" promptText="Имя" style="-fx-background-color: #F0F0FF; -fx-border-color: #6A5ACD; -fx-border-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <TextField fx:id="lastNameField" prefWidth="200.0" promptText="Фамилия" style="-fx-background-color: #F0F0FF; -fx-border-color: #6A5ACD; -fx-border-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <TextField fx:id="emailField" prefWidth="200.0" promptText="Электронная почта" style="-fx-background-color: #F0F0FF; -fx-border-color: #6A5ACD; -fx-border-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <TextField fx:id="usernameField" prefWidth="200.0" promptText="Имя пользователя" style="-fx-background-color: #F0F0FF; -fx-border-color: #6A5ACD; -fx-border-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <PasswordField fx:id="passwordField" prefWidth="200.0" promptText="Пароль" style="-fx-background-color: #F0F0FF; -fx-border-color: #6A5ACD; -fx-border-radius: 5;">
               <font>
                  <Font size="14.0" />
               </font></PasswordField>
            <PasswordField fx:id="confirmPasswordField" prefWidth="200.0" promptText="Подтвердите пароль" style="-fx-background-color: #F0F0FF; -fx-border-color: #6A5ACD; -fx-border-radius: 5;">
               <font>
                  <Font size="15.0" />
               </font></PasswordField>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="registrationButton" onAction="#onRegistrationButton" prefHeight="35.0" prefWidth="173.0" style="-fx-background-color: #6A5ACD; -fx-text-fill: white; -fx-background-radius: 5;" text="Зарегистрироваться">
                     <font>
                        <Font size="16.0" />
                     </font></Button>
                  <Button fx:id="backButton" onAction="#onBackButton" prefWidth="120.0" style="-fx-background-color: #D8BFD8; -fx-text-fill: #6A5ACD; -fx-background-radius: 5;" text="Назад">
                     <font>
                        <Font size="16.0" />
                     </font></Button>
               </children>
            </HBox>
            <Label fx:id="errorLabel" style="-fx-text-fill: #FF4040; -fx-font-size: 12px;" text="" />
         </children>
      </VBox>
   </children>
</AnchorPane>
